@inherits LayoutComponentBase

<header class="bg-ctp-crust drop-shadow flex flex-row items-center justify-between p-4 px-6 sticky top-0 w-full">
    <a class="block flex flex-row items-center space-x-2.5 text-zinc-200" href="/">
        <i class="aspect-video bg-center bg-contain bg-cs2-logo bg-no-repeat bg-origin-content block h-10 origin-center"></i>
        <span class="font-black italic mt-0.5 text-3xl tracking-wide">Launcher</span>
    </a>

    @if (User is not null)
    {
        <div class="ease-in flex flex-row items-center space-x-2.5">
            <span class="font-semibold text-lg">@User.Name</span>
            <div class="aspect-square bg-center bg-cover drop-shadow-sm h-8 mt-0.5 rounded-full" style="background-image: url('@User.AvatarUrl');"></div>
        </div>
    }
</header>

@Body

@code {

    [CascadingParameter]
    public AppUser? User { get; init; }

}