@using CS2Launcher.AspNetCore.App.Routing

<Router AppAssembly="@typeof(RootComponent).Assembly">
    <Found Context="routeData">
        <AppRouteView RouteData="routeData" User="@User" />
    </Found>

    <NotFound>
        <LayoutView Layout="@typeof(AppLayout)">
            <h1 class="text-2xl">Not Found</h1>
            <p>Nothing to see here...</p>
        </LayoutView>
    </NotFound>
</Router>

@code {

    [EditorRequired]
    [Parameter]
    public AppUser User { get; init; }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        if (firstRender)
        {
            Console.WriteLine($"CS2Launcher App v{AppVersion.Value}");
        }
    }

}