@if (!string.IsNullOrEmpty(Heading))
{
    <PageTitle>CS2Launcher: @Heading</PageTitle>
}

<main class=@ClassNames.Combine(AdditionalAttributes, "container h-full mx-auto p-4 pt-8 lg:w-2/3")>
    @if (!IsLoading)
    {
        @if (!string.IsNullOrEmpty(Heading))
        {
            <h1 class="font-bold mb-4 text-3xl">@Heading</h1>
        }

        @ChildContent
    }
    else
    {
        <div class="flex flex-row py-2">
            <Loading />
        </div>
    }
</main>

@code {

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; init; }

    [EditorRequired]
    [Parameter]
    public RenderFragment ChildContent { get; init; }

    [Parameter]
    public string? Heading { get; init; }

    [Parameter]
    public bool IsLoading { get; init; }

}